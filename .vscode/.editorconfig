root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 1000

[*.md]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

# Laravel style guide
[*.php]
indent_size = 4
indent_style = tab

[*.blade.php]
indent_size = 4
indent_style = tab

[*.{xml,html,json}]
indent_size = 4
indent_style = tab

[*.{css,js,ts,vue}]
indent_size = 4
indent_style = tab
insert_final_newline = false
quote_type = single
